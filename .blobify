# Default context - all content
+pyproject.toml
+.pre-commit-config.yaml
+.github\workflows\test.yml
+.blobify
+misc\blobify-dark.svg
@clip
@noclean
@suppress-excluded

[docs-only]
# Context for documentation review (use with -x docs-only or --context=docs-only)
-**
+*.md
@clip
@noclean
@suppress-excluded

[method-signatures:default]
# Enhanced context for method signatures and structure analysis
# Extracts class definitions, method signatures, type hints, decorators, and return statements
@filter=signatures:^ *(class\s+\w+.*:|def\s+\w+.*:|@\w+.*|async\s+def\s+\w+.*:)
@filter=returns:^ *(return\s+.*|yield\s+.*)
@filter=imports:^ *(from\s+\w+.*import.*|import\s+\w+.*)
@filter=docstrings:^ *""".*|^ *'''.*|^ *r?""".*|^ *r?'''.*
@filter=type-hints:.*:\s*\w+.*->.*|.*:\s*[A-Z]\w*\[.*\]|.*:\s*(str|int|bool|float|list|dict|tuple|set|Optional|Union|Any|Callable)

[comprehensive-signatures:default]
# More comprehensive signature extraction including constants and error handling
@filter=classes:^ *class\s+\w+.*:
@filter=functions:^ *(def\s+\w+.*:|async\s+def\s+\w+.*:)
@filter=decorators:^ *@\w+.*
@filter=returns:^ *(return\s+.*|yield\s+.*)
@filter=imports:^ *(from\s+\w+.*import.*|import\s+\w+.*)
@filter=constants:^ *[A-Z_][A-Z0-9_]*\s*=.*
@filter=exceptions:^ *(raise\s+.*|except\s+.*:|try:|finally:)
@filter=docstrings:^ *""".*|^ *'''.*

[api-surface:default]
# Extract public API surface - classes, functions, and their signatures
@filter=public-classes:^ *class\s+[A-Z]\w*.*:
@filter=public-functions:^ *def\s+[a-z_]\w*.*:
@filter=public-async:^ *async\s+def\s+[a-z_]\w*.*:
@filter=exports:^ *__all__\s*=.*
@filter=imports:^ *(from\s+\w+.*import.*|import\s+\w+.*)
@filter=module-docs:^ *""".*|^ *'''.*

[structure-overview:default]
# High-level code structure for quick understanding
@filter=classes:^ *class\s+\w+.*:
@filter=main-functions:^ *def\s+(main|__main__|run|execute|start).*:
@filter=init-methods:^ *def\s+__init__.*:
@filter=special-methods:^ *def\s+__\w+__.*:
@filter=imports:^ *(from\s+\w+.*import.*|import\s+\w+.*)
@filter=constants:^ *[A-Z_][A-Z0-9_]*\s*=.*

# Example that can be used to selectively build up a context from individual "mixins"

[nothing]
# Example context that returns nothing
@suppress-excluded
-**
@no-index

